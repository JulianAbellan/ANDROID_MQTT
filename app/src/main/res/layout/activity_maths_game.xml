<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondomates"
    tools:context=".MathsGame">

    <Button
        android:id="@+id/buttonOpA"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="#E91E63"
        android:foregroundTint="#FF0000"
        android:text="Button"
        app:autoSizeTextType="uniform"

        app:layout_constraintBottom_toBottomOf="@id/botonesArribaAbajo"
        app:layout_constraintEnd_toEndOf="@id/izqDer"
        app:layout_constraintStart_toStartOf="@id/izqIzq"
        app:layout_constraintTop_toTopOf="@id/botonesArribaArriba" />

    <Button
        android:id="@+id/buttonOpC"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="#8BC34A"
        android:text="Button"
        app:autoSizeTextType="uniform"

        app:layout_constraintBottom_toBottomOf="@id/botonesAbajoAbajo"
        app:layout_constraintEnd_toEndOf="@id/izqDer"
        app:layout_constraintStart_toStartOf="@id/izqIzq"
        app:layout_constraintTop_toTopOf="@id/botonesAbajoArriba" />

    <Button
        android:id="@+id/buttonOpB"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="#2196F3"
        android:text="Button"
        app:autoSizeTextType="uniform"

        app:layout_constraintBottom_toBottomOf="@id/botonesArribaAbajo"
        app:layout_constraintEnd_toEndOf="@id/derDer"
        app:layout_constraintStart_toStartOf="@id/derIzq"
        app:layout_constraintTop_toTopOf="@id/botonesArribaArriba" />

    <TextView
        android:id="@+id/operacionText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"
        android:background="#ADEFED"
        android:text="TextView"
        app:autoSizeTextType="uniform"

        app:layout_constraintBottom_toBottomOf="@id/textossAbajo"
        app:layout_constraintEnd_toEndOf="@id/derIzq"
        app:layout_constraintStart_toStartOf="@id/izqDer"
        app:layout_constraintTop_toTopOf="@id/textossArriba" />

    <Button
        android:id="@+id/atrasMaths"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/back"
        app:autoSizeTextType="uniform"

        app:layout_constraintBottom_toBottomOf="@id/backAbajo"
        app:layout_constraintEnd_toEndOf="@id/backDer"
        app:layout_constraintStart_toStartOf="@id/backIzq"
        app:layout_constraintTop_toTopOf="@id/backArriba" />

    <TextView
        android:id="@+id/nivelText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="TextView"
        app:autoSizeTextType="uniform"

        app:layout_constraintBottom_toBottomOf="@id/textossAbajo"
        app:layout_constraintEnd_toEndOf="@id/derDer"
        app:layout_constraintStart_toStartOf="@id/levelIzq"
        app:layout_constraintTop_toTopOf="@id/textossArriba" />

    <TextView
        android:id="@+id/score"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#ADEFED"
        android:text="TextView"
        app:autoSizeTextType="uniform"

        app:layout_constraintBottom_toBottomOf="@id/textoArribaAbajo"
        app:layout_constraintEnd_toEndOf="@id/derIzq"
        app:layout_constraintStart_toStartOf="@id/izqDer"
        app:layout_constraintTop_toTopOf="@id/backAbajo" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/bocadilloAbajo"
        app:layout_constraintEnd_toEndOf="@id/bocadilloDer"
        app:layout_constraintStart_toStartOf="@id/bocadillaIzq"
        app:layout_constraintTop_toTopOf="@id/bocadilloArriba"
        app:srcCompat="@drawable/bocadillo" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/garbanceteAbajo"
        app:layout_constraintEnd_toEndOf="@id/derIzq"
        app:layout_constraintStart_toStartOf="@id/backDer"
        app:layout_constraintTop_toTopOf="@id/garbanceteArriba"
        app:srcCompat="@drawable/garbancete" />

    <Button
        android:id="@+id/buttonOpD"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="#FFC107"
        android:text="Button"
        app:autoSizeTextType="uniform"

        app:layout_constraintBottom_toBottomOf="@id/botonesAbajoAbajo"
        app:layout_constraintEnd_toEndOf="@id/derDer"
        app:layout_constraintStart_toStartOf="@id/derIzq"
        app:layout_constraintTop_toTopOf="@id/botonesAbajoArriba" />

    <TextView
        android:id="@+id/resumenText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        app:autoSizeTextType="uniform"

        app:layout_constraintBottom_toBottomOf="@id/guideline29"
        app:layout_constraintEnd_toEndOf="@id/derDer"
        app:layout_constraintStart_toStartOf="@id/textoizq"
        app:layout_constraintTop_toTopOf="@id/outputArriba"
        tools:text="asdfasdf" />

    <TextView
        android:id="@+id/txtTiempo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:drawableTint="#DC0F0F"
        android:foregroundTint="#DF2C2C"
        android:text="TextView"
        android:textColor="#C11717"
        app:autoSizeTextType="uniform"

        app:layout_constraintBottom_toBottomOf="@id/textossAbajo"
        app:layout_constraintEnd_toEndOf="@id/contadorDer"
        app:layout_constraintStart_toStartOf="@id/izqIzq"
        app:layout_constraintTop_toTopOf="@id/textossArriba" />

    <android.support.constraint.Guideline
        android:id="@+id/backIzq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.07" />

    <android.support.constraint.Guideline
        android:id="@+id/izqIzq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.15" />

    <android.support.constraint.Guideline
        android:id="@+id/contadorDer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.35" />

    <android.support.constraint.Guideline
        android:id="@+id/izqDer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.4" />

    <android.support.constraint.Guideline
        android:id="@+id/backDer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25" />

    <android.support.constraint.Guideline
        android:id="@+id/bocadillaIzq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.49" />

    <android.support.constraint.Guideline
        android:id="@+id/textoizq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.58" />

    <android.support.constraint.Guideline
        android:id="@+id/derDer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.85" />

    <android.support.constraint.Guideline
        android:id="@+id/derIzq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.6" />

    <android.support.constraint.Guideline
        android:id="@+id/levelIzq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.65" />

    <android.support.constraint.Guideline
        android:id="@+id/bocadilloDer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.92" />

    <android.support.constraint.Guideline
        android:id="@+id/backArriba"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.04" />

    <android.support.constraint.Guideline
        android:id="@+id/backAbajo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1" />

    <android.support.constraint.Guideline
        android:id="@+id/textoArribaAbajo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.13" />

    <android.support.constraint.Guideline
        android:id="@+id/textossAbajo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.23" />

    <android.support.constraint.Guideline
        android:id="@+id/textossArriba"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1887" />

    <android.support.constraint.Guideline
        android:id="@+id/botonesArribaArriba"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.4" />

    <android.support.constraint.Guideline
        android:id="@+id/botonesArribaAbajo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.47" />

    <android.support.constraint.Guideline
        android:id="@+id/botonesAbajoArriba"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.54" />

    <android.support.constraint.Guideline
        android:id="@+id/outputArriba"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.69" />

    <android.support.constraint.Guideline
        android:id="@+id/bocadilloArriba"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.64" />

    <android.support.constraint.Guideline
        android:id="@+id/botonesAbajoAbajo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.61" />

    <android.support.constraint.Guideline
        android:id="@+id/garbanceteArriba"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.67" />

    <android.support.constraint.Guideline
        android:id="@+id/bocadilloAbajo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.81" />

    <android.support.constraint.Guideline
        android:id="@+id/garbanceteAbajo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.99" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline29"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.75" />

</android.support.constraint.ConstraintLayout>